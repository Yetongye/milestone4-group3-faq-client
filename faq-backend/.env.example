# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration - PostgreSQL Required
# Option 1: Use complete connection string
DATABASE_URL=postgresql://username:password@servername.postgres.database.azure.com:5432/databasename?sslmode=require

# Option 2: Use separate variables (alternative to DATABASE_URL)
POSTGRES_HOST=your-server-name.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=your-database-name
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_SSLMODE=require

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# AI Service Configuration
AI_SIMILARITY_THRESHOLD=0.3
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7